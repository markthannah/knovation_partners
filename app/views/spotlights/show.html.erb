<div class="show_container">
  <div class="container bg-primary1" style="width:100%">
    <div class="row">
      <span class = "rwd-line">
        <h1 class="page-header-lc"><%= @spotlight.publisher.html_safe %>
        <i class= "<%= @spotlight.icon %>" aria-hidden="true" style="padding-left: 10px; padding-right: 10px;"></i>
      </span>

      <span class = "rwd-line">
        <small style="color: white;">Knovation's Spotlight:
      </span>

      <span class = "rwd-line">
        <%= @spotlight.month %> <%= @spotlight.year %></small>
       </h1>
     </span>

    </div>
  </div>

    <div class="container pad-contain">
      <div class="well well-lg well-padding">
        <div class="row well_margin">

          <div class="col-lg-4 col-md-12 col-sm-12 panel panel-default description">
            <h3 style="color: #089de3"><%= raw(@spotlight.description_title) %></h3>
            <% if @spotlight.description.length > 1100 %>
              <p style="white-space: pre-wrap;"><%= raw @spotlight.description.truncate(1100) %>

                <!-- Bio Modal Button -->
                <div style= "text-align: right; margin-top: -10px;">
                <button type="button" class="btn btn-outline btn-info btn-sm more_button" data-toggle="modal" data-target="#DescModal-">
                 More <span class="fa fa-external-link icpad"></span>
                </button>

                <!-- Bio Modal -->
                <div id="DescModal-" class="modal fade" role="dialog">
                  <div class="modal-dialog">

                    <!-- Bio Modal content-->
                    <div class="modal-content">
                      <div class="modal-header" style="text-align: center;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Information About <%=@spotlight.publisher%></h4>
                      </div>
                      <div class="modal-body" style="text-align:left;">
                        <p>
                          <%=raw @spotlight.description %>
                        </p>

                        </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                    </div>

                  </div>
                </div>
              </div>
            <% else %>
              <p style="white-space: pre-wrap;"><%= raw (@spotlight.description) %>
            <% end %>

            </p>
        </div>

          <div class="col-lg-8 col-md-12 col-sm-12" style="padding-left: 25px;">
            <div class="row">

              <div class="embed-responsive embed-responsive-16by9 col-md-12 top-section">
                <% @spotlight.resources.resource_type("Featured").each do |featuredresource| %>
                <iframe class="embed-responsive-item" src="<%= featuredresource.url %>"> </iframe>
              </div>

              <div class="col-md-12 panel panel-default bottom-section">
                <h4 style="color: grey">Information About <%= raw(@spotlight.publisher) %></h4>

                <% if @spotlight.bio.length > 250 %>
                  <p style="white-space: pre-wrap;"><%= raw @spotlight.bio.truncate(250) %>

                    <!-- Bio Modal Button -->
                    <div style= "text-align: right; margin-top: -10px;">
                    <button type="button" class="btn btn-outline btn-info btn-sm more_button_bio" data-toggle="modal" data-target="#BioModal-">
                     More <span class="fa fa-external-link icpad"></span>
                    </button>

                    <!-- Bio Modal -->
                    <div id="BioModal-" class="modal fade" role="dialog">
                      <div class="modal-dialog">

                        <!-- Bio Modal content-->
                        <div class="modal-content">
                          <div class="modal-header" style="text-align: center;">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Information About <%=@spotlight.publisher%></h4>
                          </div>
                          <div class="modal-body" style="text-align:left;">
                            <p>
                              <%=raw @spotlight.bio %>
                            </p>

                            </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          </div>
                        </div>

                      </div>
                    </div>
                  </div>
                <% else %>
                  <p style="white-space: pre-wrap;"><%= raw (@spotlight.bio) %>
                <% end %>

                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container bg-primary2" style="width:100%">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 text-center">
        <h2 class="section-heading">Our favorites from <%= @spotlight.publisher %> <i class="fa fa-star-o" aria-hidden="true" style="padding-left: 10px; padding-right: 10px;"></i></h2>

        <hr class="light">
        <p class="text-faded">Here are just a few resources from <%= raw @spotlight.publisher %> that we think you'll love.</p>
      </div>
    </div>
  </div>

  <div class="row-fluid resource-row">
    <% @spotlight.resources.resource_type("Supporting").each do |supportingresource| %>
      <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12 panel_height">
        <div class="panel panel-default panel-bottom panel-border">
          <div class="panel-body">
            <div class="hovereffect">
              <%=image_tag(supportingresource.image.url(:medium), :class => "img-responsive portfolio-item", :alt => "Responsive image")%>
                <a target="_blank" href= "<%= supportingresource.url %>">
                  <div class="overlay">
                    <h2 class="launch_image">Click to view</h2>
                  </div>
                </a>
              </div>
              <div class="resource_title">
                <a target="_blank" href= "<%= supportingresource.url %>">
                  <h4><%= supportingresource.title.truncate(60).html_safe %></h4>
                </a>
              </div>
              <% if @spotlight.description.length > 380 %>
                <div class="resource-description">
                  <p><%= supportingresource.description.truncate(380).html_safe %></p>

                  <!-- Bio Modal Button -->
                  <div style= "text-align: right; margin-top: -10px;">
                  <button type="button" class="btn btn-outline btn-info btn-sm more_button_resource" data-toggle="modal" data-target="#ResourceModal-<%=supportingresource.id%>">
                   More <span class="fa fa-external-link icpad"></span>
                  </button>

                  <!-- Bio Modal -->
                  <div id="ResourceModal-<%= supportingresource.id %>" class="modal fade" role="dialog">
                    <div class="modal-dialog">

                      <!-- Bio Modal content-->
                      <div class="modal-content">
                        <div class="modal-header" style="text-align: center;">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title"><%= supportingresource.title.truncate(60).html_safe %></h4>
                        </div>
                        <div class="modal-body" style="text-align:left;">
                          <p>
                            <%=raw supportingresource.description %>
                          </p>

                          </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                      </div>

                    </div>
                  </div>
                </div>
              </div>
              <% else %>
                <p><%= supportingresource.description.html_safe %></p>
              <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row-fluid resource_line">
    <div class="col-md-12 resource_line">
    </div>
  </div>
</div>
