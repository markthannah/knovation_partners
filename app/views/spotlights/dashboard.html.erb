<div class="container faqs-container">
  <div style="margin-bottom: 70px;">
    </br>
    <h2>Spotlight Dashboard</h2>
    <br>
    <div>
      <!-- Table -->
      <table class="table table-vcenter">
        <thead class="cpindex">
          <tr>
            <th style=width=5%></th>
            <th></th>
            <th>Publisher</th>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @spotlights.each do |spotlight| %>
              <tr>
                <td></td>
                <td><%= link_to spotlight_path(spotlight) do %>
                  <span class="fa fa-external-link"></span>
                  <%=spotlight.publisher%>
                <% end %></td>
                <td><%= image_tag spotlight.image.url(:small)%></td>
                <td><%= spotlight.title%></td>
                <td><%= truncate(spotlight.description.html_safe, :length => 40, :separator => " " )%></td>
                <td><%= link_to edit_spotlight_path(spotlight), class:"btn btn-primary", :method => :get do %>
                  <span class="fa fa-edit"></span> Edit
                <% end %>
                  <%= link_to spotlight, method: :delete, data: { confirm: 'Are you sure you want to delete this spotlight?' }, class: "btn btn-danger" do %>
                  <span class="fa fa-trash-o"></span> Delete
                <% end %></td>
              </tr>
            <% end %>
        </tbody>
      </table>

    <br>
        <%= link_to 'New Spotlight', new_spotlight_path, class: "btn btn-primary" %>
    </div>

      </br>
      <hr>
      </br>

  <h2>Resource Dashboard</h2>
  <br>
    <!-- Table -->
    <table class="table table-vcenter">
      <thead class="cpindex">
        <tr>
          <th style=width=5%></th>
          <th>Resource Title</th>
          <th>Resource URL</th>
          <th>Subject</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @resources.each do |resource| %>
            <tr>
              <td></td>
              <td><%= raw resource.title %></td>
              <td><%= link_to resource.url, resource.url, :target => "_blank" %></td>
              <td><%= resource.subject %></td>
              <td><%= link_to edit_resource_path(resource), class:"btn btn-primary", :method => :get do %>
                <span class="fa fa-edit"></span> Edit
              <% end %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
