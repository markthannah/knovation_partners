<div class="form_top container">
  <p id="notice"><%= notice %></p>

  <div class="jumbotron jumbocustommath">
    <div class="row">

      <div class = "col-md-7 col-lg-4">
        <div class="embed-responsive embed-responsive-16by9 video_container">
          <video  width="980" height="620" controls poster= "http://ren-network.com/wp-content/uploads/2014/07/Knovation.png">
            <source src= "https://s3-us-west-2.amazonaws.com/nettrekker-videos/How+Do+I+Effectively+Search+for+Resources_+%5BTeacher%5D-HD.mp4" type='video/mp4'>
              <p>To view this video please enable JavaScript, and consider upgrading to a web browser that supports HTML5 video</p>
          </video>
        </div>
      </div>

        <div class= "col-md-5 col-lg-8" style="padding-left:35px; padding-top:25px;">
          <h1 style="color:#454545; font-size:52px;"><b>Math</b> Resources</h1>
          <div class="subtext">Curated by Knovation's Curriculum Specialists</div>
        </div>

      </div>
    </div>

  <div class="row">
    <div class="col-xs-4 col-sm-offset-3 col-sm-4 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-5"></div>
        <%= link_to 'All', math_path, class: "btn btn-primary"%>
      <div class="btn-group">
        <%= link_to 'Elementary', math_path(:elementary_math => true), class: "btn btn-info" %>
        <%= link_to 'Middle', math_path(:middle_math => true), class: "btn btn-info" %>
        <%= link_to 'High', math_path(:high_math => true), class: "btn btn-info" %>
      </div>
    </div>

    <%= render 'resources/resourceresults' %>
</div>
